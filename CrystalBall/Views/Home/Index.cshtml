
@{
    ViewBag.Title = "Crystal Ball";
}

<h2 style="position:relative; left:35%">Gaze Into the Crystal Ball</h2>
<img src="~/Content/beachball.jpg" class="img-responsive beachball" alt="a beach ball" />
<!---<button style="position:relative; left:50%;">CLICK ME</button>-->
<p id="reply"></p>

<script>
    $(document).ready(function () {
        $("img").mouseover(function () {
            //alert("this works");
            $.get("@Url.Action("ShakeBall", "Home")", function (response) {
                $("#reply").text(response);
                });
        });
    });

</script>
